mixin task_form(action, method, task, memberUsers, err)
  form.box(action=action, method="post")
    _csrf
    _method=method

    - if(err)
      ul.errors
        each error in err.errors
          li= error.message

    div
      label(for='title') タイトル
      input#title(name="title", value!=task.title)
    div
      label(for='body') 内容
      textarea#body(name="body") #{task.body}
    
    div
      lavel(for='assigneeId') 担当者
      - var hasMemberUsers = memberUsers.length > 0
      if hasMemberUsers
        select#assigneeId(name="displayName")
          each memberUser in memberUsers
            option(value!=displayName) #{memberUser.displayName}
      else
        select#assigneeId(name="assigneeId")
          option(value!=assigneeId) なし      
      
    div.actions
      input(type="submit")
