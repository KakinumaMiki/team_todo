extends layout

block content

  if (user)
    h2= __('views.Message.AssignedTasks')
    - var hasTasks = tasks.length > 0
    if hasTasks
      table(border=1)
        thead
          tr
            th チーム
            th タスクID
            th タイトル
            th 担当者
            th 作成日時
            th 操作
        tbody
          each task in tasks
            tr
              td= task.team.name
              td= task.id
              td= task.title
              td= task.assignee.displayName
              td= helpers.formatDateTime(task.createdAt)
              td
                a(href=`/tasks/${task.id}`) 詳細
    else
      p タスクはありません
    h2= __('views.Message.BelongTeam')
    a(href="/teams/create") チーム作成
    - var hasTeams = members.length > 0
    if hasTeams
      table(border=1)
        thead
          tr
            th チームID
            th 名前
            th 役割
            th 作成日時
            th 操作
        tbody
          each member in members
            tr
              td= member.team.id
              td= member.team.name
              td= __(`models.Member.taemRoles.${member.role}`)
              td= helpers.formatDateTime(member.team.createdAt)
              td
                if member.role === 1
                  a(href=`/manager/teams/${member.team.id}`) 管理
    else
      p 所属しているチームはありません
  else
    p ログインしてから操作してください